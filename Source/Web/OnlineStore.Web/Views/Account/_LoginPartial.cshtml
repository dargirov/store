@model OnlineStore.Web.ViewModels.Account.LoginViewModel
@{
    Layout = null;
}
<div id="login-form-container">
    <a href="#disabled" class="colorbox-close">X</a>
    <h1>Вход</h1>
    @using (Html.BeginForm("Login", "Account", new { ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login-form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("")

        <div>
            <span><i class="fa fa-at"></i></span>@Html.TextBoxFor(m => m.Email, new { placeholder = "Email адрес" })
        </div>

        <div>
            <span><i class="fa fa-lock"></i></span>@Html.PasswordFor(m => m.Password, new { placeholder = "Парола" })
        </div>
        <div>
            @Html.CheckBoxFor(m => m.RememberMe)
            @Html.LabelFor(m => m.RememberMe)
        </div>

        <input type="submit" value="Вход">
    }
</div>
